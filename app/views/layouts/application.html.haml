!!!
%html
  %head
    = display_meta_tags :site => "ShotHere"
    = stylesheet_link_tag    "application-all", :media => "all"
    = stylesheet_link_tag    "application-mobile", :media => "(max-device-width: 1279px)"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #map
    #search.pull-right
      %i.icon-search.absolute-left.middle
      %input#searchbox{:type => 'text', :name => 'search'}
    #page
      #body
        / Devise flash msgs
        - unless alert.nil?
          %p.notice= notice
        - unless alert.nil?
          %p.alert= alert
        = yield
        = yield :body
      #footer
        = yield :footer
    #overlay.container
      .message= "#{I18n.t "movie.loading"} #{I18n.t "wait"}"
    :coffeescript
      $ ->
        Shothere.App.start({})
